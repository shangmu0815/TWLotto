<?xml version="1.0" encoding="utf-8"?>
<!-- <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="wrap_content" android:layout_height="wrap_content"> -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal" android:baselineAligned="false"
    android:paddingLeft="11dip" android:paddingTop="4dip"
    android:paddingBottom="8dip">


    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="vertical">

        <TextView android:id="@+id/invoice_draw" android:text="Invoice Draw"
            android:textSize="20sp" android:ellipsize="end"
            android:layout_gravity="center_vertical" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="10dp" />

        <ImageView android:src="@drawable/overscroll_edge"
            android:text="Invoice Draw" android:layout_gravity="center_vertical"
            android:layout_width="280dp" android:layout_height="wrap_content"
            android:layout_marginRight="10dp" />

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical">

            <LinearLayout android:orientation="horizontal"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="10dip">
                <TextView android:id="@+id/invoice_grand" android:text="特別獎"
                    android:textSize="22sp" android:singleLine="true"
                    android:ellipsize="end" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_marginLeft="10dip" />
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:orientation="vertical">
                    <TextView android:id="@+id/invoice_grand_number_1"
                        android:text="88888888" android:textSize="22sp"
                        android:singleLine="true" android:ellipsize="end"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:layout_marginLeft="30dip" android:textColor="#ffffffff" />

                    <TextView android:id="@+id/invoice_grand_number_2"
                        android:text="88888888" android:textSize="22sp"
                        android:singleLine="true" android:ellipsize="end"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:layout_marginLeft="30dip" android:textColor="#ffffffff" />

                    <TextView android:id="@+id/invoice_grand_number_3"
                        android:text="88888888" android:textSize="22sp"
                        android:singleLine="true" android:ellipsize="end"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:layout_marginLeft="30dip" android:textColor="#ffffffff" />
                </LinearLayout>
            </LinearLayout>
            <TextView android:id="@+id/invoice_grand_notes"
                android:text="八位數號碼與上列號碼相同者獎金1000萬元" android:textSize="14sp"
                android:ellipsize="end" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginLeft="10dip"
                android:layout_marginTop="10dip" />

            <ImageView android:id="@+id/invoice_grand_line" android:src="@drawable/overscroll_edge"
                android:text="Invoice Draw" android:layout_gravity="center_vertical"
                android:layout_width="280dp" android:layout_height="wrap_content"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical">
            <LinearLayout android:orientation="horizontal"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="10dip">

                <TextView android:id="@+id/invoice_topprize" android:text="特獎"
                    android:textSize="22sp" android:singleLine="true"
                    android:ellipsize="end" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_marginLeft="10dip" />

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:orientation="vertical">
                    <TextView android:id="@+id/invoice_topprize_number_1"
                        android:text="77777777" android:textSize="22sp"
                        android:singleLine="true" android:ellipsize="end"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:layout_marginLeft="50dip" android:textColor="#ffffffff" />

                    <TextView android:id="@+id/invoice_topprize_number_2"
                        android:text="77777777" android:textSize="22sp"
                        android:singleLine="true" android:ellipsize="end"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:layout_marginLeft="50dip" android:textColor="#ffffffff" />

                    <TextView android:id="@+id/invoice_topprize_number_3"
                        android:text="77777777" android:textSize="22sp"
                        android:singleLine="true" android:ellipsize="end"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:layout_marginLeft="50dip" android:textColor="#ffffffff" />
                </LinearLayout>
            </LinearLayout>
            <TextView android:id="@+id/invoice_topprize_notes"
                android:text="八位數號碼與上列號碼相同者獎金200萬元" android:textSize="14sp"
                android:ellipsize="end" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginLeft="10dip"
                android:layout_marginTop="10dip" />

            <ImageView android:src="@drawable/overscroll_edge"
                android:text="Invoice Draw" android:layout_gravity="center_vertical"
                android:layout_width="280dp" android:layout_height="wrap_content"
                android:layout_marginRight="20dp" android:layout_marginLeft="10dip" />
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginTop="10dip">
                <TextView android:id="@+id/invoice_firstprize"
                    android:text="頭獎" android:textSize="22sp" android:singleLine="true"
                    android:ellipsize="end" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_marginLeft="10dip" />

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:orientation="vertical">
                    <TextView android:id="@+id/invoice_firstprize_number_1"
                        android:text="66666666" android:textSize="22sp"
                        android:singleLine="true" android:ellipsize="end"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:layout_marginLeft="50dip" android:textColor="#ffffffff" />
                    <TextView android:id="@+id/invoice_firstprize_number_2"
                        android:text="66666666" android:textSize="22sp"
                        android:singleLine="true" android:ellipsize="end"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:layout_marginLeft="50dip" android:textColor="#ffffffff" />
                    <TextView android:id="@+id/invoice_firstprize_number_3"
                        android:text="66666666" android:textSize="22sp"
                        android:singleLine="true" android:ellipsize="end"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:layout_marginLeft="50dip" android:textColor="#ffffffff" />
                </LinearLayout>
            </LinearLayout>
            <TextView android:id="@+id/invoice_firstprize_notes"
                android:text="八位數號碼與上列號碼相同者獎20萬元" android:textSize="14sp"
                android:ellipsize="end" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginLeft="10dip"
                android:layout_marginTop="10dip" />
            <ImageView android:src="@drawable/overscroll_edge"
                android:text="Invoice Draw" android:layout_gravity="center_vertical"
                android:layout_width="280dp" android:layout_height="wrap_content"
                android:layout_marginRight="20dp" android:layout_marginLeft="10dip" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="5dip">
            <TextView android:text="二獎 " android:textSize="20sp"
                android:ellipsize="end" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginLeft="10dip" />

            <TextView android:id="@+id/invoice_grand_notes"
                android:text="末七碼與頭獎中獎號碼相同者各得獎金4萬元  " android:textSize="12sp"
                android:ellipsize="end" android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="5dip">
            <TextView android:text="三獎 " android:textSize="20sp"
                android:ellipsize="end" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginLeft="10dip" />

            <TextView android:text="末六碼與頭獎中獎號碼相同者各得獎金1萬元"
                android:textSize="12sp" android:ellipsize="end"
                android:layout_width="wrap_content" android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="10dip">
            <TextView android:text="四獎 " android:textSize="20sp"
                android:ellipsize="end" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginLeft="10dip" />

            <TextView android:text="末五碼與頭獎中獎號碼相同者各得獎金4千元"
                android:textSize="12sp" android:ellipsize="end"
                android:layout_width="wrap_content" android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="10dip">
            <TextView android:text="五獎 " android:textSize="20sp"
                android:ellipsize="end" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginLeft="10dip" />

            <TextView android:text="末四碼與頭獎中獎號碼相同者各得獎金1千元"
                android:textSize="12sp" android:ellipsize="end"
                android:layout_width="wrap_content" android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="10dip">
            <TextView android:text="六獎 " android:textSize="20sp"
                android:ellipsize="end" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginLeft="10dip" />

            <TextView android:text="末三碼與頭獎中獎號碼相同者各得獎金2百元"
                android:textSize="12sp" android:ellipsize="end"
                android:layout_width="wrap_content" android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout android:orientation="horizontal"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="10dip">
            <TextView android:id="@+id/invoice_sixth_prize"
                android:text="增開六獎" android:textSize="20sp" android:ellipsize="end"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginLeft="10dip" />

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="vertical">
                <TextView android:id="@+id/invoice_sixthprize_number_1"
                    android:text="55555555" android:textSize="22sp" android:singleLine="true"
                    android:ellipsize="end" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_marginLeft="30dip"
                    android:textColor="#FF0000" />
                <TextView android:id="@+id/invoice_sixthprize_number_2"
                    android:text="55555555" android:textSize="22sp" android:singleLine="true"
                    android:ellipsize="end" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_marginLeft="30dip"
                    android:textColor="#FF0000" />
                <TextView android:id="@+id/invoice_sixthprize_number_3"
                    android:text="55555555" android:textSize="22sp" android:singleLine="true"
                    android:ellipsize="end" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_marginLeft="30dip"
                    android:textColor="#FF0000" />
                <TextView android:id="@+id/invoice_sixthprize_number_4"
                    android:text="55555555" android:textSize="22sp" android:singleLine="true"
                    android:ellipsize="end" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_marginLeft="30dip"
                    android:textColor="#FF0000" />
                <TextView android:id="@+id/invoice_sixthprize_number_5"
                    android:text="55555555" android:textSize="22sp" android:singleLine="true"
                    android:ellipsize="end" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_marginLeft="30dip"
                    android:textColor="#FF0000" />
            </LinearLayout>
        </LinearLayout>
        <TextView android:id="@+id/invoice_sixth_prize_notes"
            android:text="末三碼與上列號碼相同者各得獎金2百元" android:textSize="14sp"
            android:ellipsize="end" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip" />

        <ImageView android:src="@drawable/overscroll_edge"
            android:text="Invoice Draw" android:layout_gravity="center_vertical"
            android:layout_width="280dp" android:layout_height="wrap_content"
            android:layout_marginRight="10dp" />
    </LinearLayout>
</LinearLayout>
